# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
DB_USER=asp_user
DB_PASSWORD=your_secure_database_password
DB_NAME=asp_cranes
DB_HOST=database
DB_PORT=5432

# Backend Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=your_very_secure_jwt_secret_key_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Frontend Configuration
VITE_API_URL=https://www.avariq.in/api
VITE_APP_BASE_PATH=/lander
VITE_APP_TITLE=ASP Cranes CRM

# SSL Configuration (if using Let's Encrypt)
DOMAIN=avariq.in
EMAIL=your-email@example.com

# Security
ALLOWED_ORIGINS=https://www.avariq.in,https://avariq.in
CORS_ORIGIN=https://www.avariq.in

# Logging
LOG_LEVEL=info
