

# ASP Cranes CRM Frontend Environment Configuration
# Production Environment Configuration

# Vite Configuration
VITE_NODE_ENV=development
VITE_MODE=development

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_BACKEND_URL=http://localhost:3001

# Application Configuration
VITE_APP_TITLE=ASP Cranes CRM
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=ASP Cranes Customer Relationship Management System

# Database Configuration (Client-side via Vite)
VITE_DB_HOST=crm-db
VITE_DB_PORT=5432
VITE_DB_NAME=asp_crm
VITE_DB_USER=postgres
VITE_DB_PASSWORD=
VITE_DB_SSL=false

# JWT Configuration (Client-side via Vite)
VITE_JWT_SECRET=
VITE_JWT_STORAGE_KEY=asp_cranes_jwt
VITE_SESSION_TIMEOUT=900000
VITE_AUTO_REFRESH_INTERVAL=780000

# Security Configuration
VITE_CSRF_ENABLED=true
VITE_SECURE_COOKIES=true
VITE_USE_MOCKS=false

# Feature Flags
VITE_ENABLE_MFA=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_AI_FEATURES=true

# AI Configuration
VITE_AI_CHAT_ENABLED=true
VITE_AI_QUOTATION_ENABLED=true
VITE_AI_LEAD_PROCESSING_ENABLED=true

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# UI Configuration
VITE_THEME=light
VITE_LANGUAGE=en
VITE_TIMEZONE=UTC

# Performance Configuration
VITE_DEBOUNCE_DELAY=300
VITE_PAGINATION_SIZE=20
VITE_CACHE_ENABLED=true

# Development Security (Disabled in Production)
VITE_BYPASS_AUTH=false
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# Company Information
VITE_COMPANY_NAME=ASP Cranes
VITE_COMPANY_EMAIL=info@aspcranes.com
VITE_COMPANY_PHONE=+1-XXX-XXX-XXXX
VITE_COMPANY_ADDRESS=Your Company Address
