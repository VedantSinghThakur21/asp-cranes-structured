# =========================================
# ASP Cranes CRM - Environment Template
# =========================================
# COPY THIS TO .env AND FILL IN YOUR SECURE VALUES
# NEVER COMMIT .env FILES TO GIT!

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0
BACKEND_URL=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aspcranes_crm
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE
DATABASE_URL=postgresql://postgres:YOUR_SECURE_DATABASE_PASSWORD_HERE@localhost:5432/aspcranes_crm

# JWT Security Configuration - GENERATE NEW SECRETS!
# Use: openssl rand -base64 64
JWT_SECRET=GENERATE_NEW_JWT_SECRET_64_BYTES_BASE64
JWT_REFRESH_SECRET=GENERATE_NEW_REFRESH_SECRET_64_BYTES_BASE64
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Session Configuration - GENERATE NEW SECRET!
# Use: openssl rand -base64 32
SESSION_SECRET=GENERATE_NEW_SESSION_SECRET_32_BYTES_BASE64

# MFA Configuration
MFA_ISSUER=ASP Cranes CRM
MFA_SERVICE_NAME=ASP Cranes

# Email Configuration (for notifications and MFA)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=YOUR_EMAIL@company.com
EMAIL_PASSWORD=YOUR_APP_PASSWORD
EMAIL_FROM=ASP Cranes CRM <YOUR_EMAIL@company.com>

# AI Configuration
CREWAI_API_URL=https://asp-cranes-ai-sales-chatbot-v1-19ac7cde-f23-cb712937.crewai.com
CREWAI_API_TOKEN=YOUR_CREWAI_API_TOKEN
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_CRON=0 2 * * *
